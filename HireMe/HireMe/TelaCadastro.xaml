            <ComboBoxItem Content="Tarja Magnética"/>
        </ComboBox>
        <ComboBox x:Name="comboBoxBandeira" HorizontalAlignment="Left" Margin="86,79,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem Content="Visa"/>
            <ComboBoxItem Content="Mastercard"/>
        </ComboBox>
        <Label x:Name="labelNumero" Content="" HorizontalAlignment="Left" Height="33" Margin="10,273,0,-51" VerticalAlignment="Top" Width="272"/>


    </Grid>
</Window>
