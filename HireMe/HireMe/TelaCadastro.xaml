        mc:Ignorable="d"
        Title="TelaCadastro" Height="377.962" Width="300">
    <Grid Margin="0,0,0,41">
        <Label x:Name="labelNome" Content="Nome" HorizontalAlignment="Left" Height="28" Margin="10,42,0,0" VerticalAlignment="Top" Width="71"/>
        <Label x:Name="labelLimite" Content="Limite" HorizontalAlignment="Left" Margin="10,181,0,0" VerticalAlignment="Top" Width="71"/>
        <Label x:Name="labelSenha" Content="Senha" HorizontalAlignment="Left" Margin="10,110,0,0" VerticalAlignment="Top" Width="71"/>
        <TextBox x:Name="textBoxNome" HorizontalAlignment="Left" Height="23" Margin="86,44,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="textBoxLimite" HorizontalAlignment="Left" Height="23" Margin="86,184,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
